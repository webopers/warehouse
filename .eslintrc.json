{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": ["airbnb-base"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 11,
		"sourceType": "module"
	},
	"rules": {
		"no-unused-vars": "error",
		"no-console": "off",
		"no-tabs": "off",
		"indent": [2, "tab"],
		"quotes": "off",
		"linebreak-style": ["error", "windows"],
		"import/extensions": [0, { "js": "never" }],
		"arrow-body-style": "off",
		"max-len": ["warn", 130]
	}
}
